<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/"><b>Home</b></a></li>
        <li class="breadcrumb-item active" aria-current="page"><b>View
                User</b></li>
    </ol>
</nav>

<div class="view-user p-5">
    {{#each rows}}
    <div class="row mb-5">
        <div class="col text-center">
            <h3 style="font-size: 35px;text-transform: uppercase; text-decoration: underline;"> {{this.first_name}} {{this.last_name}} </h3>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-bordered">
                <thead class="thread-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">{{this.id}}</th>
                        <td> {{this.first_name}} </td>
                        <td> {{this.last_name}} </td>
                        <td> {{this.email}} </td>
                        <td> {{this.phone}} </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <u><b><h5>Comment About Person</h5></b></u>
            <p style="font-size: 20px; font-family: Arial, Helvetica, sans-serif;">{{this.comments}}</p>
        </div>
    </div>
    {{/each}}
</div>